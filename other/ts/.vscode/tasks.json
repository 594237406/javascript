{
  "version": "0.1.0",
  "command": "tsc",
  "isShellCommand": true,
  "tasks": [
    {
      "taskName": "Build",
      "isBuildCommand": true,
      "suppressTaskName": true,
      "args": ["-p", "."],
      "showOutput": "silent",
      "problemMatcher": "$tsc"
    },
    {
      "taskName": "Dev",
      "suppressTaskName": true,
      "args": ["-p", ".", "-w"],
      "showOutput": "silent",
      "isWatching": true
    }
  ]
}